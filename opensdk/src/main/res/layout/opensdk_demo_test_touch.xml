    android:id="@+id/view_red_bag_rain_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.eulertu.opensdk.view.MoveByTouchView
        android:id="@+id/view_red_bag_rain_tips_layout"
